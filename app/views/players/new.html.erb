<h1 class="mb-4 text-center">➕ Add New Player</h1>

<div class="row justify-content-center">
  <div class="col-md-6">

    <% if @player.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(@player.errors.count, "error") %> prevented this player from being saved:</h5>
        <ul class="mb-0">
          <% @player.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card shadow-sm">
      <div class="card-body">

        <%= form_with model: @player do |f| %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label fw-semibold" %>
            <%= f.text_field :name,
                             class: "form-control",
                             placeholder: "Enter player name" %>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "← Back", players_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "Create Player", class: "btn btn-primary" %>
          </div>

        <% end %>

      </div>
    </div>

  </div>
</div>
