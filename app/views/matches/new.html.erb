<% if @match.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class="mb-4">âž• Record New Match</h1>

<div class="card p-4 shadow-sm">
  <%= form_with model: @match do |f| %>

    <div class="mb-3">
      <%= f.label :winner_id, "Winner", class: "form-label" %>
      <%= f.collection_select :winner_id,
                              Player.all,
                              :id,
                              :name,
                              { prompt: "Select Winner" },
                              { class: "form-select" } %>
    </div>

    <div class="mb-3">
      <%= f.label :loser_id, "Loser", class: "form-label" %>
      <%= f.collection_select :loser_id,
                              Player.all,
                              :id,
                              :name,
                              { prompt: "Select Loser" },
                              { class: "form-select" } %>
    </div>

    <div>
      <%= f.submit "Save Match", class: "btn btn-success" %>
      <%= link_to "Back", matches_path, class: "btn btn-secondary ms-2" %>
    </div>

  <% end %>
</div>
