<h1 class="mb-4">ğŸ¸ Matches</h1>

<%= link_to "Record New Match", new_match_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Date</th>
      <th>Winner</th>
      <th>Loser</th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.created_at.strftime("%d %b %Y") %></td>
        <td>
          <span class="badge bg-success">
            <%= match.winner.name %>
          </span>
        </td>
        <td>
          <span class="badge bg-danger">
            <%= match.loser.name %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
