<h1>Create User</h1>

<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys %>
  </div>

  <%= f.submit "Create User" %>
<% end %>
