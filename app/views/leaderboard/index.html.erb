<h1>Leaderboard</h1>

<table border="1">
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>Wins</th>
    <th>Losses</th>
  </tr>

  <% @players.each_with_index do |player, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= player.name %></td>
      <td><%= player.wins_count %></td>
      <td><%= player.losses_count %></td>
    </tr>
  <% end %>
</table>
